{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
    "baseUrl": ".",
    "paths": {
      "$src/*": ["./src/*"],
      "$components/*": ["./src/components/*"],
      "$styles/*": ["./src/styles/*"],
      "$interfaces/*": ["./src/interfaces/*"],
    }
	}
}
